@{
    ViewData["Title"] = "Cadastro de Categorias";
}

@model SistemaVendas.Models.CategoriaViewModel;

@{
    var disabled = (Model.Codigo == null) ? "disabled" : string.Empty;
}

<h2>Cadastro de Categorias</h2>

<form asp-controller="Categoria" asp-action="Cadastro" method="post">
    <input type="hidden" asp-for="Codigo" value="@Model.Codigo"/> 
    <div class="form-group">
        <div class="col-4">
            <label>Descrição</label>
            <input class="form-control" type="text" asp-for="Descricao" value="@Model.Descricao"/>
            <span class="text-danger" asp-validation-for="Descricao"></span>
        </div>
    </div>
    <br>
    <div class="col">
        <button class="btn btn-info" type="button" onclick="Novo()">Novo</button>
        <button class="btn btn-success" type="submit">Gravar</button>
        <button class="btn btn-warning" type="button" onclick="Listar()">Listagem</button>
        <button class="btn btn-danger" type="button" onclick="Excluir(@Model.Codigo)" @disabled>Excluir</button>
    </div>
</form>

<script>
    function Novo() {
        window.location = window.origin + "/Categoria/Cadastro";
    }

    function Listar() {
        window.location = window.origin + "/Categoria";
    }

    function Excluir(Codigo) {
        window.location = window.origin + "/Categoria/Excluir/" + Codigo;
    }
</script>
