@{
    ViewData["Title"] = "Login";
    Layout = null;
}

@model SistemaVendas.Models.LoginViewModel

<link href="~/css/login.css" rel="stylesheet"/>

<div class="wrapper fadeInDown">
    <div id="formContent">
        <div class="fadeIn first">
            <div style="float: left; width: 100%;">
                <img src="~/img/logo.png" id="icon" alt="Logo" />
            </div>
        </div>

        <form asp-controller="Login" asp-action="Index" method="post">
            <input asp-for="Email" type="text" id="login" class="fadeIn second" placeholder="Digite seu email">
            <span asp-validation-for="Email" style="color: red;"></span>
            <input asp-for="Senha" type="password" id="password" class="fadeIn third" placeholder="Digite sua senha">
            <span asp-validation-for="Senha" style="color: red;"></span>
            <br />
            <input type="submit" class="fadeIn fourth" value="Entrar">
            <br />
            <span class="text-danger">@ViewData["ErroLogin"]</span>
        </form>

        <div id="formFooter">
            <a class="underlineHover" href="#">Esqueceu a senha?</a>
        </div>
    </div>
</div>
