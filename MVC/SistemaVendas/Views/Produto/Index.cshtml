@{
    ViewData["Title"] = "Produtos";
}

@model List<SistemaVendas.Entities.Produto>;

<h2>Produtos</h2>
<hr />

<table class="table table-bordered">
    <thead>
        <tr style="background-color: #f6f6f6">
            <th>Código</th>
            <th>Descrição</th>
            <th>Valor Unitário</th>
            <th>Quantidade em Estoque</th>
            <th>Categoria</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach(var item in Model)
            {
                <tr onclick="Editar(@item.Codigo)" style="cursor: pointer;">
                    <td>@item.Codigo</td>
                    <td>@item.Descricao</td>
                    <td>@item.ValorUnitario</td>
                    <td>@item.QuantidadeEstoque</td>
                    <td>@item.Categoria.Descricao</td>
                </tr>
            }
        }
    </tbody>
</table>
<br>
<button class="btn btn-block btn-primary" type="button" onclick="Cadastrar()">
    Cadastrar Produto
</button>

<script>
    function Cadastrar() {
        window.location = window.origin + "/Produto/Cadastro";
    }

    function Editar(Codigo) {
        window.location = window.origin + "/Produto/Cadastro/" + Codigo;
    }
</script>