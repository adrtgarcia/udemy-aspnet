@{
    ViewData["Title"] = "Cadastro de Produtos";
}

@model SistemaVendas.Aplicacao.Models.ProdutoViewModel;

@{
    var disabled = (Model.Codigo == null) ? "disabled" : string.Empty;
}

<h2>Cadastro de Produtos</h2>

<form asp-controller="Produto" asp-action="Cadastro" method="post">
    <input type="hidden" asp-for="Codigo" value="@Model.Codigo" />
    <div class="form-group">
        <div class="col-4">
            <label>Descrição</label>
            <input class="form-control" type="text" asp-for="Descricao" value="@Model.Descricao" />
            <span class="text-danger" asp-validation-for="Descricao"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-4">
            <label>Valor Unitário</label>
            <input class="form-control" type="text" asp-for="ValorUnitario" value="@Model.ValorUnitario" />
            <span class="text-danger" asp-validation-for="ValorUnitario"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-4">
            <label>Quantidade em Estoque</label>
            <input class="form-control" type="number" asp-for="QuantidadeEstoque" value="@Model.QuantidadeEstoque" />
            <span class="text-danger" asp-validation-for="QuantidadeEstoque"></span>
        </div>
    </div>
    <div class="form-group">
        <div class="col-4">
            <label>Categoria</label>
            <select class="form-control" input-group-lg asp-for="CodigoCategoria" asp-items="@Model.ListaCategorias"></select>
            <span class="text-danger" asp-validation-for="CodigoCategoria"></span>
        </div>
    </div>
    <br>
    <div class="col">
        <button class="btn btn-info" type="button" onclick="Novo()">Novo</button>
        <button class="btn btn-success" type="submit">Gravar</button>
        <button class="btn btn-warning" type="button" onclick="Listar()">Listagem</button>
        <button class="btn btn-danger" type="button" onclick="Excluir(@Model.Codigo)" @disabled>Excluir</button>
    </div>
</form>

<script>
    function Novo() {
        window.location = window.origin + "/Produto/Cadastro";
    }

    function Listar() {
        window.location = window.origin + "/Produto";
    }

    function Excluir(Codigo) {
        window.location = window.origin + "/Produto/Excluir/" + Codigo;
    }
</script>
